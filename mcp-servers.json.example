{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace"
      ],
      "env": {}
    },
    "slack-tools": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-slack"
      ],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    },
    "holistics": {
      "url": "http://localhost:3000/api/v2/mcp",
      "headers": {
        "X-Holistics-Key": "<HOLISTICS_API_KEY>"
      },
      "mode": "http"
    }
  }
}